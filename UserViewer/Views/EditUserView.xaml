<rxui:ReactiveUserControl 
             x:Class="UserViewer.EditUserView"
             xmlns:rxui="http://reactiveui.net"
             x:TypeArguments="local:EditUserViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
		<StackPanel>
		
		<TextBlock Text="Edit User" Style="{StaticResource Subtitle}" DockPanel.Dock="Top"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Text="Users Name:" />
				<TextBox x:Name="Name" Grid.Column="1"/>
				<TextBlock Text="Date of Birth:" Grid.Row="1"/>
				<DatePicker x:Name="Date" Grid.Column="1" Grid.Row="1"/>
				<TextBlock Text="Profession:" Grid.Row="2"/>
				<TextBox x:Name="Profession" Grid.Column="1" Grid.Row="2"/>
			</Grid>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Save" />
			</StackPanel>
			
		</StackPanel>
	</DockPanel>
</rxui:ReactiveUserControl>
