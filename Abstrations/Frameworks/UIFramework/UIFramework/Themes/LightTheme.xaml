<local:ThemeResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIFramework"
                    DisplayName="Light">
    
    <Color x:Key="LightBackgroundColour">#f3f3f3</Color>
	<Color x:Key="BorderColour">#e8e8e8</Color>
	<Color x:Key="ElementColour">#fff</Color>
    <Color x:Key="AltElementColour">#e8e8e8</Color>
	<Color x:Key="Text">#444</Color>
	<Color x:Key="DarkGray">#888</Color>
    <Color x:Key="ShadowColour">#888</Color>
	<Color x:Key="Accent">#0067c0</Color>

	<SolidColorBrush x:Key="BackgroundPanelBrush"  Color="{DynamicResource LightBackgroundColour}"/>
	<SolidColorBrush x:Key="ElementBorderBrush" Color="{DynamicResource BorderColour}"/>
	<SolidColorBrush x:Key="ElementBrush" Color="{DynamicResource ElementColour}"/>
    <SolidColorBrush x:Key="AltElementBrush" Color="{DynamicResource AltElementColour}"/>
	<SolidColorBrush x:Key="TextColour" Color="{DynamicResource Text}"/>
	<SolidColorBrush x:Key="DarkGrayForeground" Color="{DynamicResource DarkGray}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{DynamicResource ShadowColour}"/>
	<SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource Accent}"/>

</local:ThemeResourceDictionary>