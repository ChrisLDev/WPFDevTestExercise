<rxui:ReactiveUserControl  x:Class="AppSettings.AboutView"
             xmlns:rxui="http://reactiveui.net"
             x:TypeArguments="local:AboutViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppSettings"
             mc:Ignorable="d" >
    <StackPanel >
        <TextBlock Text="About" Style="{StaticResource Subtitle}" FontSize="25"/>

        <Border Background="{StaticResource ElementBrush}" CornerRadius="4" Margin="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Contacts App Reactive UI Test"/>
                <Image Style="{StaticResource Logo}" Height="150" HorizontalAlignment="Left"/>

                <TextBlock Text="This app is designed to show off my skills with wpf and c# coding."/>

                <TextBlock >
                    <Hyperlink NavigateUri="https://github.com/ChrisLDev" RequestNavigate="Hyperlink_RequestNavigate">
                        GitHub
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </StackPanel>
</rxui:ReactiveUserControl>
